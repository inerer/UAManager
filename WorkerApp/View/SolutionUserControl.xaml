<UserControl x:Class="WorkerApp.View.SolutionUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WorkerApp.View"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Margin="5" Content="Решение задачи:"/>
            <Label Margin="5" Name="SolutionTextBox" Height="250"/>
            <Button Width="150" Height="25" Content="Отправить" HorizontalAlignment="Left" Margin="5" Name="SendButton" Click="SendButton_OnClick"></Button>
        </StackPanel>
    </Grid>
</UserControl>
